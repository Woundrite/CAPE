---
const { title } = Astro.props;
import { ViewTransitions } from "astro:transitions";
import { Link } from "@nextui-org/react";
import {
  FaTachometerAlt,
  FaClipboardList,
  FaUserPlus,
  FaFileAlt,
  FaMoneyBillWave,
  FaCog,
  FaSignOutAlt,
  FaBookOpen,
} from "react-icons/fa";
import toast, { Toaster } from "react-hot-toast";
import { userSettings } from "../store.ts";
import { useStore } from "@nanostores/react";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <script>
      const settings = useStore(userSettings);
      let header = new Headers({
        "Content-Type": "application/json",
        Authorization: "Token " + settings.authtoken,
        "Access-Control-Allow-Origin": "http://localhost:8000",
        "Access-Control-Allow-Methods": "GET,HEAD,OPTIONS,POST,PUT",
        "Access-Control-Allow-Headers":
          "Origin, X-Requested-With, Content-Type, Accept",
      });

      let reqOpts = {
        method: "GET",
        headers: header,
        body: JSON.stringify({
          "permission": "profile"
        }),
      };

      fetch(settings.apiroot + "login", reqOpts)
        .then((response) => response.json())
        .then((result) => {
          if(result.status == "failed"){
            window.location = "/";
          }
        })
        .catch((error) => {window.location = "/";});
    </script>
    <ViewTransitions />
    <style>
      body {
        margin: 0;
        font-family: Arial, sans-serif;
      }
      .sidebar {
        background: #473bf5; /* Custom Blue Color */
        color: white;
        position: fixed;
        height: 100%;
        width: 250px;
        border-radius: 0 20px 20px 0;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        padding-top: 20px; /* Add padding to the top */
        display: flex;
        flex-direction: column;
        align-items: center; /* Center items horizontally */
      }
      .cape-header {
        background: rgba(173, 216, 230, 0.7); /* Light shade of blue */
        padding: 15px; /* Padding for the header */
        width: 80%; /* Rectangle width */
        border-radius: 15px; /* Rounded corners */
        text-align: center; /* Center text */
        font-weight: bold; /* Bold text */
        font-size: 24px; /* Increased font size */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2); /* Subtle shadow for depth */
        margin-bottom: 20px; /* Space below the header */
        display: flex; /* Flexbox to align items */
        align-items: center; /* Center items vertically */
        justify-content: center; /* Center items horizontally */
      }
      .cape-icon {
        font-size: 28px; /* Size of the icon */
        margin-right: 10px; /* Space between icon and text */
        color: #007bff; /* New icon color (light blue) */
      }
      .sidebar a {
        display: flex;
        flex-direction: column;
        align-items: center; /* Center items */
        padding: 15px 0; /* Vertical padding */
        text-decoration: none;
        color: white;
        transition: background 0.3s;
        width: 100%; /* Full width for clickable area */
      }
      .sidebar a:hover,
      .sidebar a:focus {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 5px;
      }
      .icon {
        font-size: 24px; /* Icon size */
        margin-bottom: 5px; /* Space between icon and text */
      }
      .icon-label {
        font-size: 14px; /* Button name size */
      }
      .main-content {
        margin-left: 250px;
        padding: 20px;
        background: #f8fafc; /* Light Gray */
        height: 100vh;
        overflow-y: auto; /* Enable scrolling for long content */
      }
      .footer {
        margin-top: auto; /* Push to the bottom */
        padding: 10px 0; /* Padding for footer */
        margin-bottom: 0.7cm; /* Space from bottom */
        text-align: center; /* Center the footer */
      }
    </style>
  </head>
  <body>
    <div>
      <div><Toaster /></div>
      <div class="sidebar">
        <div class="cape-header">
          <FaBookOpen className="cape-icon" />
          <!-- CAPE Icon -->
          CAPE
        </div>
        <!-- New CAPE section -->
        <Link href="/profile/dashboard">
          <FaTachometerAlt className="icon" />
          <span class="icon-label">Dashboard</span>
        </Link>
        <Link href="/profile/Exams">
          <FaClipboardList className="icon" />
          <span class="icon-label">Exams</span>
        </Link>
        <Link href="/profile/register">
          <FaUserPlus className="icon" />
          <span class="icon-label">Register</span>
        </Link>
        <Link href="/profile/reports">
          <FaFileAlt className="icon" />
          <span class="icon-label">Reports</span>
        </Link>
        <Link href="/profile/payment">
          <FaMoneyBillWave className="icon" />
          <span class="icon-label">Payment</span>
        </Link>
        <div class="footer">
          <Link href="/profile/Settings">
            <FaCog className="icon" />
            <span class="icon-label">Settings</span>
          </Link>
          <Link href="/profile/signout">
            <FaSignOutAlt className="icon" />
            <span class="icon-label">Sign Out</span>
          </Link>
        </div>
      </div>
      <main class="main-content">
        <slot />
      </main>
    </div>
  </body>
</html>
