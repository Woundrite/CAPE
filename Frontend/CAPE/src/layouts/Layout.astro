---
const { title } = Astro.props;
import { ClientRouter } from "astro:transitions";
import toast, { Toaster } from "react-hot-toast";
---

<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<div><Toaster /></div>
		<slot />
	</body>
</html>
