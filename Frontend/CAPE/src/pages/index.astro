              },
            ].map((review, i) => (
              <div
                key={i}
                class="flex justify-center w-[33.33%] bg-blue-500 p-6 text-center"
              >
                <div class="flex flex-col rounded-xl bg-white w-3/4 p-6 items-center">
                  <Image src={womanimage} alt="User avatar" width="60" height="60" class="w-16 h-16 rounded-full mb-4 shadow-md"/>   
                  <h3 class="text-lg font-bold text-gray-800">{review.name}</h3>
                  <p class="mt-2 text-gray-600">{review.content}</p>
                </div>
              </div>
            ))
          }
        </div>

        <!-- Right Arrow -->
        <button
          id="right-arrow"
          class="absolute right-2 top-1/2 transform -translate-y-1/2 p-4 text-white bg-gray-700 rounded-full z-10"
          aria-label="Next"
        >
          &#8594;
        </button>
      </div>
    </div>

    <script is:inline>
      let currentIndex = 0;
      const sliderContainer = document.querySelector(".slider-container");
      const leftArrow = document.querySelector("#left-arrow");
      const rightArrow = document.querySelector("#right-arrow");
      const totalReviews = 15;
      const reviewsVisible = 3;

      const updateSliderPosition = () => {
        sliderContainer.style.transform = `translateX(-${currentIndex * (100 / reviewsVisible)}%)`;
      };

      // Automatic sliding
      const startAutoSlide = () => {
        return setInterval(() => {
          currentIndex = (currentIndex + 1) % (totalReviews / reviewsVisible);
          updateSliderPosition();
        }, 2500);
      };

      let autoSlide = startAutoSlide();

      const stopAutoSlide = () => {
        clearInterval(autoSlide);
      };

      // Arrow functionality
      leftArrow.addEventListener("click", () => {
        stopAutoSlide();
        currentIndex =
          (currentIndex - 1 + totalReviews / reviewsVisible) %
          (totalReviews / reviewsVisible);
        updateSliderPosition();
        autoSlide = startAutoSlide();
      });

      rightArrow.addEventListener("click", () => {
        stopAutoSlide();
        currentIndex = (currentIndex + 1) % (totalReviews / reviewsVisible);
        updateSliderPosition();
        autoSlide = startAutoSlide();
      });
    </script>

    <style>
