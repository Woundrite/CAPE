      AOS.init();
    </script>

    <!-- Navigation -->
    <Nav client:load Active="Home" />

    <!-- Hero Section -->
    <div
      class="relative w-full h-screen bg-gradient-to-b from-gray-100 to-gray-200 grid grid-cols-2"
    >
      <div class="h-screen flex flex-col justify-center items-center gap-6">
