          <p class="text-gray-600">
            Adapt tests to suit your needs with flexible settings and options.
          </p>
        </div>
        <!-- Feature 6 -->
        <div
          class="flex flex-col items-center text-center gap-4 bg-white p-6 rounded-lg shadow-lg"
          data-aos="zoom-in"
        >
        <Image src={supportimage} alt="24/7 Support From CAPE" width="120" height="120"/>
          <h3 class="text-xl font-bold text-gray-700">24/7 Support</h3>
          <p class="text-gray-600">
            Our dedicated support team is here to assist you at any time.
          </p>
        </div>
      </div>
    </div>
    <!-- Review Section -->
