        overflow: hidden;
        position: relative;
      }

      .slider-container {
        display: flex;
      }

      .slider-container div {
        flex-shrink: 0;
      }

      .slider-container div img {
        width: 4rem;
        height: 4rem;
        object-fit: cover;
        border-radius: 50%;
      }

      .slider-container div h3 {
        font-weight: bold;
        font-size: 1.125rem;
        color: #374151;
      }

      .slider-container div p {
        font-size: 0.875rem;
        color: #6b7280;
        margin-top: 0.5rem;
      }

      #left-arrow,
      #right-arrow {
        font-size: 1.5rem;
        cursor: pointer;
        background-color: rgba(55, 65, 81, 0.8);
        padding: 0.5rem 1rem;
        border: none;
        outline: none;
      }

      #left-arrow:hover,
