          <h3 class="font-bold text-2xl text-purple-600">200+</h3>
        </div>
      </div>
      <div class="h-screen flex justify-center items-center">
        <Image src={studentexam} alt="Landing Image" width="600" height="600" class="rounded-lg shadow-lg animate-fade-in"/>
      </div>
    </div>

    <!-- Features Section -->
    <div class="w-full py-20 bg-gray-100" data-aos="fade-up">
