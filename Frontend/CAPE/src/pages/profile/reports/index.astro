---
import Layout from "../../../layouts/LayoutVertical.astro";
---

<Layout title="Reports">
  <main class="h-screen bg-gray-50 p-8">
    <header class="flex justify-between items-center bg-white p-5 rounded-lg shadow-sm mb-8">
      <div class="flex items-center space-x-2">
        <label for="sort" class="text-gray-600 font-medium">Sort:</label>
        <select id="sort" class="border border-gray-300 rounded-lg px-3 py-1 focus:outline-none focus:ring-2 focus:ring-blue-400">
          <option>Last Week</option>
          <option>Last Month</option>
          <option>All Time</option>
        </select>
      </div>
      <div class="flex items-center space-x-6">
        <button class="p-2 rounded-full hover:bg-gray-100 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.5V11a6.002 6.002 0 00-4-5.659V4a2 2 0 10-4 0v1.341C7.67 7.165 6 9.388 6 12v2.5c0 .403-.243.772-.595.895L4 17h5" />
          </svg>
        </button>
        <button class="h-10 w-10 rounded-full bg-blue-500 text-white flex items-center justify-center hover:bg-blue-600 transition">
          <span class="font-semibold">J</span>
        </button>
      </div>
    </header>

    <div class="bg-white shadow-md rounded-xl p-6 mb-8">
      <h2 class="text-lg font-semibold text-gray-700 mb-4">Generate Report</h2>
      <form class="space-y-4">
        <div>
          <label class="block text-gray-600">Select Report Type:</label>
          <select class="border border-gray-300 rounded-lg w-full px-3 py-1 focus:outline-none focus:ring-2 focus:ring-blue-400">
            <option>Exam Performance</option>
            <option>Attendance Report</option>
            <option>Assignment Statistics</option>
          </select>
        </div>
        <div class="flex space-x-4">
          <div class="w-1/2">
            <label class="block text-gray-600">Start Date:</label>
            <input type="date" class="border border-gray-300 rounded-lg w-full px-3 py-1 focus:outline-none focus:ring-2 focus:ring-blue-400" />
          </div>
          <div class="w-1/2">
            <label class="block text-gray-600">End Date:</label>
            <input type="date" class="border border-gray-300 rounded-lg w-full px-3 py-1 focus:outline-none focus:ring-2 focus:ring-blue-400" />
          </div>
        </div>
        <button class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 transition" type="submit">Generate Report</button>
      </form>
    </div>

    <div class="bg-white shadow-md rounded-xl p-6 mb-8">
      <h2 class="text-lg font-semibold text-gray-700 mb-4">Exams Given</h2>
      <table class="min-w-full bg-white border border-gray-300">
        <thead>
          <tr>
            <th class="py-3 px-4 border-b text-left">Exam Name</th>
            <th class="py-3 px-4 border-b text-left">Date</th>
            <th class="py-3 px-4 border-b text-left">Score</th>
            <th class="py-3 px-4 border-b text-left">Results</th>
          </tr>
        </thead>
        <tbody>
          <tr class="hover:bg-gray-100">
            <td class="py-3 px-4 border-b">Math Exam</td>
            <td class="py-3 px-4 border-b">2024-09-15</td>
            <td class="py-3 px-4 border-b">85%</td>
            <td class="py-3 px-4 border-b">
              <button class="bg-blue-500 text-white py-1 px-3 rounded hover:bg-blue-600 transition">View</button>
            </td>
          </tr>
          <tr class="hover:bg-gray-100">
            <td class="py-3 px-4 border-b">Science Exam</td>
            <td class="py-3 px-4 border-b">2024-09-20</td>
            <td class="py-3 px-4 border-b">78%</td>
            <td class="py-3 px-4 border-b">
              <button class="bg-blue-500 text-white py-1 px-3 rounded hover:bg-blue-600 transition">View</button>
            </td>
          </tr>
          <tr class="hover:bg-gray-100">
            <td class="py-3 px-4 border-b">History Exam</td>
            <td class="py-3 px-4 border-b">2024-09-25</td>
            <td class="py-3 px-4 border-b">90%</td>
            <td class="py-3 px-4 border-b">
              <button class="bg-blue-500 text-white py-1 px-3 rounded hover:bg-blue-600 transition">View</button>
            </td>
          </tr>
          <!-- Add more rows as needed -->
        </tbody>
      </table>
    </div>

    <div class="bg-white shadow-md rounded-xl p-6 mb-8">
      <h2 class="text-lg font-semibold text-gray-700 mb-4">Downloadable Resources</h2>
      <ul class="list-disc pl-5 mb-4">
        <li class="mb-2">
          <a href="#" class="text-blue-500 hover:underline">Exam Performance Report (PDF)</a>
        </li>
        <li class="mb-2">
          <a href="#" class="text-blue-500 hover:underline">Attendance Report (CSV)</a>
        </li>
        <li class="mb-2">
          <a href="#" class="text-blue-500 hover:underline">Assignment Statistics (XLSX)</a>
        </li>
        <li class="mb-2">
          <a href="#" class="text-blue-500 hover:underline">Monthly Performance Overview (PPT)</a>
        </li>
      </ul>
    </div>

    <footer class="mt-10 p-4 text-center text-gray-600">
      <p>&copy; 2024 Ritik Mishra. All rights reserved.</p>
    </footer>
  </main>
</Layout>
