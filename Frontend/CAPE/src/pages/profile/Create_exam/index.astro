---
import Layout from "@layouts/LayoutVertical.astro";
---

<Layout>
  <main class="create-exam-container">
    <!-- Header Section -->
    <header class="header-section">
      <h1>Create New Exam</h1>
      <p>Fill out the form below to create a new exam.</p>
    </header>

    <!-- Form Section -->
    <div class="form-section">
      <form>
        <div class="form-group">
          <label for="exam-title">Exam Title</label>
          <input type="text" id="exam-title" placeholder="Enter exam title" required />
        </div>

        <div class="form-group">
          <label for="exam-date">Exam Date</label>
          <input type="date" id="exam-date" required />
        </div>

        <div class="form-group">
          <label for="exam-duration">Exam Duration (in minutes)</label>
          <input type="number" id="exam-duration" placeholder="Enter duration in minutes" required />
        </div>

        <div class="form-group">
          <label for="exam-description">Description</label>
          <textarea id="exam-description" rows="4" placeholder="Enter exam description" required></textarea>
        </div>

        <button type="submit" class="submit-btn">Create Exam</button>
      </form>
    </div>
  </main>
</Layout>

<style>
  /* Create Exam Container */
  .create-exam-container {
    padding: 20px;
  }

  /* Header Section */
  .header-section {
    background-color: #f5f5f5;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
    margin-bottom: 30px;
  }

  .header-section h1 {
    font-size: 36px;
    color: #333;
    margin-bottom: 10px;
  }

  .header-section p {
    font-size: 18px;
    color: #666;
  }

  /* Form Section */
  .form-section {
    max-width: 600px;
    margin: 0 auto;
    background-color: #fff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  /* Form Group */
  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    font-size: 16px;
    color: #333;
    display: block;
    margin-bottom: 8px;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 10px;
    font-size: 14px;
    border: 1px solid #ddd;
    border-radius: 5px;
    box-sizing: border-box;
  }

  .form-group input[type="date"] {
    font-size: 14px;
  }

  .form-group textarea {
    resize: vertical;
  }

  /* Submit Button */
  .submit-btn {
    background-color: #473bf5;
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    width: 100%;
  }

  .submit-btn:hover {
    background-color: #3c31e2;
  }
</style>
