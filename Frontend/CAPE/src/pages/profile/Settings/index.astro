---
import Layout from "@layouts/LayoutVertical.astro";
import { FaUserCircle, FaEnvelope, FaLock, FaBell, FaLanguage, FaSave } from "react-icons/fa";
---

<Layout>
  <main class="settings-container">
    <div class="settings-header">
      <h1>Settings</h1>
    </div>

    <div class="settings-form">
      <!-- Profile Settings -->
      <div class="setting-item center-content">
        <label class="setting-label" for="profile-picture">
          <FaUserCircle class="icon" />
          <span>Profile Picture</span>
        </label>
        <input type="file" id="profile-picture" class="setting-input" />
      </div>

      <div class="setting-item center-content">
        <label class="setting-label" for="username">
          <FaUserCircle class="icon" />
          <span>Username</span>
        </label>
        <input type="text" id="username" class="setting-input" placeholder="Enter your new username" />
      </div>

      <div class="setting-item center-content">
        <label class="setting-label" for="email">
          <FaEnvelope class="icon" />
          <span>Email</span>
        </label>
        <input type="email" id="email" class="setting-input" placeholder="Enter your new email" />
      </div>

      <div class="setting-item center-content">
        <label class="setting-label" for="password">
          <FaLock class="icon" />
          <span>Password</span>
        </label>
        <input type="password" id="password" class="setting-input" placeholder="Enter your new password" />
      </div>

      <!-- Notification Settings -->
      <div class="setting-item center-content">
        <label class="setting-label" for="notifications">
          <FaBell class="icon" />
          <span>Notifications</span>
        </label>
        <select id="notifications" class="setting-input">
          <option value="all">All Notifications</option>
          <option value="email">Email Only</option>
          <option value="none">None</option>
        </select>
      </div>

      <!-- Language Settings -->
      <div class="setting-item center-content">
        <label class="setting-label" for="language">
          <FaLanguage class="icon" />
          <span>Language</span>
        </label>
        <select id="language" class="setting-input">
          <option value="en">English</option>
          <option value="es">Spanish</option>
          <option value="fr">French</option>
          <option value="de">German</option>
        </select>
      </div>

      <!-- Save Button -->
      <div class="setting-action center-content">
        <button class="save-btn">
          <FaSave /> Save Changes
        </button>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Layout of the settings page */
  .settings-container {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    height: 100vh;
    padding: 20px;
  }

  /* Header for the Settings title */
  .settings-header {
    text-align: center;
    width: 100%;
    margin-bottom: 30px;
  }

  h1 {
    font-size: 40px;
    font-weight: bold;
    color: #000; /* Black color for header */
  }

  /* Styling for the settings form */
  .settings-form {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 600px;
    background-color: #fff;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  /* Aligning individual setting items */
  .setting-item {
    margin-bottom: 25px;
    display: flex;
    flex-direction: row; /* Align label and icon horizontally */
    align-items: center;
    width: 100%;
  }

  /* Center content for profile picture input */
  .center-content {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Labels for each setting */
  .setting-label {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 12px;
    color: #000; /* Black color for labels */
    display: flex;
    align-items: center;
  }

  /* Span for text to appear next to the icon */
  .setting-label span {
    margin-left: 10px; /* Space between the icon and text */
  }

  /* Inputs for settings */
  .setting-input {
    font-size: 16px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    width: 100%;
    max-width: 400px;
    margin-bottom: 15px;
  }

  /* Action buttons styling */
  .setting-action {
    margin-top: 20px;
    text-align: center;
  }

  .save-btn {
    background-color: #473bf5;
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
  }

  .save-btn:hover {
    background-color: #5c4cc1;
  }

  /* Icon styling */
  .icon {
    font-size: 20px;
    color: #000; /* Black color for icons */
  }
</style>
