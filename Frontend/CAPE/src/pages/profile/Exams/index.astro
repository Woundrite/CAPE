---
import Layout from "../../../layouts/LayoutVertical.astro";
import {
	Table,
	TableHeader,
	TableColumn,
	TableBody,
	TableRow,
	TableCell,
	getKeyValue,
} from "@nextui-org/react";
---

<Layout title="CAPE">
	<script>
		const rows = [
			{
				key: "1",
				name: "Tony Reichert",
				role: "CEO",
				status: "Active",
			},
			{
				key: "2",
				name: "Zoey Lang",
				role: "Technical Lead",
				status: "Paused",
			},
			{
				key: "3",
				name: "Jane Fisher",
				role: "Senior Developer",
				status: "Active",
			},
			{
				key: "4",
				name: "William Howard",
				role: "Community Manager",
				status: "Vacation",
			},
		];

		const columns = [
			{
				key: "name",
				label: "NAME",
			},
			{
				key: "role",
				label: "ROLE",
			},
			{
				key: "status",
				label: "STATUS",
			},
		];
	</script>
	<main>
		<div class="h-screen grid grid-rows-[1fr_5fr]">
			<div class="bg-white"></div>
			<div class="bg-grey-200 grid grid-rows-[1fr_6fr_1fr]">
				<div
					class="p-5 px-10 text-black font-extrabold text-2xl grid grid-cols-[7fr_1fr]"
				>
					<div>Exam</div>
					<div></div>
				</div>
				<div>
					<Table aria-label="Example table with dynamic content">
						<TableHeader columns={columns}>
							{
								(column) => (
									<TableColumn key={column.key}>
										{column.label}
									</TableColumn>
								)
							}
						</TableHeader>
						<TableBody items={rows}>
							{
								(item) => (
									<TableRow key={item.key}>
										{(columnKey) => (
											<TableCell>
												{getKeyValue(item, columnKey)}
											</TableCell>
										)}
									</TableRow>
								)
							}
						</TableBody>
					</Table>
				</div>
				<div></div>
			</div>
		</div>
	</main>
</Layout>
